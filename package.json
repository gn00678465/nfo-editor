{
  "name": "nfo-editor",
  "version": "1.1.1",
  "author": "gn00678465",
  "description": "NFO Metadata Editor",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:mac": "vite build && electron-builder --mac",
    "electron:win": "vite build && electron-builder --win",
    "electron:linux": "vite build && electron-builder --linux",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "build": {
    "appId": "com.nfo-editor.app",
    "productName": "NFO Metadata Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build"
    }
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-rc.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "fast-xml-parser": "^4.5.3",
    "lucide-react": "^0.565.0",
    "react": "^18.3.1",
    "react-day-picker": "^9.13.2",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^34.3.0",
    "electron-builder": "^26.8.1",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.18"
  }
}
